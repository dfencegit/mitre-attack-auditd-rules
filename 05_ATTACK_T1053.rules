# -----------------------------------------------------------------------
# ATTACK_T1053 - Scheduled Task/Job
# -----------------------------------------------------------------------
# ATTACK_T1053_002 - At
-w /etc/at.allow -p wa -k ATTACK_T1053_002
-w /etc/at.deny -p wa -k ATTACK_T1053_002
-w /var/spool/at/ -p wa -k ATTACK_T1053_002
# ATTACK_T1053_003 - Cron
-w /etc/cron.allow -p wa -k ATTACK_T1053_003
-w /etc/cron.deny -p wa -k ATTACK_T1053_003
-w /etc/cron.d/ -p wa -k ATTACK_T1053_003
-w /etc/cron.daily/ -p wa -k ATTACK_T1053_003
-w /etc/cron.hourly/ -p wa -k ATTACK_T1053_003
-w /etc/cron.monthly/ -p wa -k ATTACK_T1053_003
-w /etc/cron.weekly/ -p wa -k ATTACK_T1053_003
-w /etc/crontab -p wa -k ATTACK_T1053_003
-w /var/spool/cron/crontabs/ -k ATTACK_T1053_003
-w /etc/anacrontab -p wa -k ATTACK_T1053_003
-a always,exit -F path=/usr/bin/crontab -F perm=x -F auid>=500 -F auid!=4294967295 -k ATTACK_T1053_003
# ATTACK_T1053_006 - Systemd Timers
-w /run/systemd/system/ -p wa -k ATTACK_T1053_006
-w /etc/systemd/system/ -p wa -k ATTACK_T1053_006
-w /etc/systemd/system-generators/ -p wa -k ATTACK_T1053_006
-w /etc/systemd/user-generators/ -p wa -k ATTACK_T1053_006
-w /usr/lib/systemd/system/ -p wa -k ATTACK_T1053_006
-w /usr/lib/systemd/system-generators -p wa -k ATTACK_T1053_006
-w /usr/lib/systemd/user-generators -p wa -k ATTACK_T1053_006
